<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_marker_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr">

    <ImageView
        android:layout_width="@dimen/marker_width_height"
        android:layout_height="@dimen/marker_width_height"
        android:background="@drawable/marker_mask"
        android:layout_gravity="center"/>

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/profile_image_width_height"
        android:layout_height="@dimen/profile_image_width_height"
        android:src="@drawable/barby"
        android:layout_gravity="center"
        android:contentDescription="@null"/>
</FrameLayout>